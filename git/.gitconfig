[user]
	name = Armin Kirchner
	email = post.armin@gmail.com
[core]
	autocrlf = input
	safecrlf = true
	excludesfile = /home/akirchner/.gitignore
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[commit]
	gpgsign = true
